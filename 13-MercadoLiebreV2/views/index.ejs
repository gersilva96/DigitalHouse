<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=none">

    <!-- Estilos -->
    <link rel="stylesheet" href="/stylesheets/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="shortcut icon" type="image/svg" href="https://http2.mlstatic.com/ui/navigation/5.6.0/mercadolibre/favicon.ico">

    <title>Mercado Liebre Argentina</title>
</head>

<body>
    <%- include("./partials/header.ejs") %>

    <div class="banner"></div>

    <section class="lv-offers container">
        <div class="row">
            <div class="col-12">
                <h2 class="h2">Ofertas</h2>
            </div>
            <% for(let i=0; i<productsInSale.length; i++) { %>
                <div class="col-12 col-md-6 col-lg-3">
                    <article class="product-box">
                        <a href="/product/detail/<%= productsInSale[i].id %>/<%= productsInSale[i].category %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= productsInSale[i].image %>" alt="imagen de producto">
                            </figure>
                            <article class="product-box_data">
                                <h3>$<%= formatPrice(productsInSale[i].price,productsInSale[i].discount) %></h3>
                                <% if(productsInSale[i].discount != 0) { %>
                                    <span><%= productsInSale[i].discount %>% OFF</span>
                                <% } %>
                                <p><%= productsInSale[i].name %></p>
                                <i class="fas fa-truck"></i>
                            </article>
                        </a>
                    </article>
                </div>
            <% } %>
        </div>
    </section>

    <section class="lv-offers container">
        <div class="row">
            <div class="col-12">
                <h2 class="h2">Basado en tu Ãºltima visita</h2>
            </div>
            <% for(let i=0; i<productsVisited.length; i++) { %>
                <div class="col-12 col-md-6 col-lg-3">
                    <article class="product-box">
                        <a href="/product/detail/<%= productsVisited[i].id %>/<%= productsVisited[i].category %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= productsVisited[i].image %>" alt="imagen de producto">
                            </figure>
                            <article class="product-box_data">
                                <h3>$<%= formatPrice(productsVisited[i].price,productsVisited [i].discount); %></h3>
                                <% if(productsVisited[i].discount != 0) { %>
                                    <span><%= productsVisited[i].discount %>% OFF</span>
                                <% } %>
                                <p><%= productsVisited[i].name %></p>
                                <i class="fas fa-truck"></i>
                            </article>
                        </a>
                    </article>
                </div>
            <% } %>
        </div>
    </section>

    <%- include("./partials/footer.ejs") %> 

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script src="/javascripts/toogle-nav.js"></script>
</body>

</html>