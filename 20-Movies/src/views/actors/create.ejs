<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Agregar actor/actriz"}) %>
</head>

<body>
    <div class="body-section">
        <%- include("../partials/header", {title: "Agregar actor/actriz"}) %>
        <div class="container margin">
            <% if (typeof(errors) != "undefined") { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach(errores => { %>
                    <li><%= errores.msg %></li>
                    <% }) %>
                </ul>
            </div>
            <% } %>
            <form class="form border border-primary" action="/actors/create" method="POST">
                <div class="md-form">
                    <label for="first_name">Nombre:</label>
                    <input type="text" class="form-control" name="first_name" id="first_name" required>
                </div>
                <div class="md-form">
                    <label for="last_name">Apellido:</label>
                    <input type="text" class="form-control" name="last_name" id="last_name" required>
                </div>
                <div class="md-form">
                    <label for="rating">Rating:</label>
                    <input type="text" class="form-control" name="rating" id="rating" required>
                </div>
                <div class="md-form">
                    <label for="favorite_movie_id"></label>
                    <select name="favorite_movie_id" id="favorite_movie_id" class="form-control">
                        <option selected disabled>Pel√≠cula favorita:</option>
                        <% movies.forEach(movie => { %>
                        <option value="<%= movie.id %>"><%= movie.title %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group d-flex justify-content-between align-items-center">
                    <a href="/actors"><i class="fas fa-chevron-left"></i> Volver</a>
                    <button type="reset" class="btn btn-sm btn-outline-warning waves-effect">Reiniciar</button>
                    <button type="submit" class="btn btn-sm btn-success waves-effect">Agregar</button>
                </div>
            </form>
        </div>
    </div>
    <%- include("../partials/footer") %>
    <%- include("../partials/scripts") %>
</body>

</html>