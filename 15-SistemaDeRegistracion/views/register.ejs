<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head.ejs") %>
    <title>Register</title>
</head>

<body>

    <div class="container">
        <a href="/"><button type="button" class="btn btn-success">HOME</button></a>
        <h1>Register</h1>
        <% if (typeof(mensaje) != "undefined") { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <li><%= mensaje %></li>
                </ul>
            </div>
        <% } %>
        <div class="form">
            <form action="/users/register" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Nombre:</label>
                    <input class="form-control" type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="lastname">Apellido:</label>
                    <input class="form-control" type="text" id="lastname" name="lastname" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="repeat_password">Repetir contraseña:</label>
                    <input class="form-control" type="password" id="repeat_password" name="repeat_password" required>
                </div>
                <div class="form-group">
                    <label for="repeat_password">Elegir avatar:</label>
                    <input type="file" id="avatar" name="avatar" accept=".jpg,.png,.jpeg" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>